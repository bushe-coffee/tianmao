<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1b2b3c"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_filper_taobao_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:src="@drawable/default_img" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3C4E60" />

    <TextView
        android:id="@+id/item_filper_taobao_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="left"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="left"
            android:text="价格："
            android:textColor="#C7C8C8"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/item_filper_taobao_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="left"
            android:text="@string/app_name"
            android:textColor="#FF9E36"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#213347"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:drawableLeft="@drawable/comment"
            android:drawablePadding="8dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="宝贝评价"
            android:textColor="#C7C8C8"
            android:textSize="18dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_filper_taobao_comment1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/comment_people"
        android:drawablePadding="8dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="left"
        android:maxLines="1"
        android:text="test"
        android:textColor="#E6E6E6"
        android:textSize="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#4F6276" />

    <TextView
        android:id="@+id/item_filper_taobao_comment2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/comment_people"
        android:drawablePadding="8dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="left"
        android:maxLines="1"
        android:text="text"
        android:textColor="#E6E6E6"
        android:textSize="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#4F6276" />

    <TextView
        android:id="@+id/item_filper_taobao_comment3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/comment_people"
        android:drawablePadding="8dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="left"
        android:maxLines="1"
        android:text="test"
        android:textColor="#E6E6E6"
        android:textSize="16dp" />


    <RelativeLayout
        android:layout_width="256dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/detail_buy_button"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/buy_car"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="#FFFFFF"
            android:textSize="22dp" />

    </RelativeLayout>

</LinearLayout>