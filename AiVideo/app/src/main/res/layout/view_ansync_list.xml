<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bj"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/view_screen_cap"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:elevation="4dp" />

    <RelativeLayout
        android:id="@+id/view_taobao_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/view_taobao_button"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:layout_centerInParent="true"
            android:background="@drawable/radus_corner"
            android:elevation="4dp"
            android:src="@null" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:elevation="8dp">

            <ImageView
                android:id="@+id/view_taobao_image"
                android:layout_width="118dp"
                android:layout_height="118dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/product_defult" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="64dp"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/taobao_logo" />

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_baidu_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/view_baidu_button"
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:layout_height="140dp"
            android:src="@drawable/baidu_bj"
            android:scaleType="fitCenter"
            android:background="@drawable/radus_corner"
            android:elevation="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:elevation="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/view_baidu_image"
                android:layout_width="118dp"
                android:layout_height="118dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/default_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/view_baidu_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/default_text"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/view_baidu_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="8dp"
                    android:text="@string/default_text"
                    android:textColor="@android:color/black"
                    android:textSize="12dp" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_dianbo_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/view_dianbo_button"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:layout_centerInParent="true"
            android:src="@drawable/video_dianbo_bj"
            android:scaleType="fitCenter"
            android:background="@drawable/radus_corner"
            android:elevation="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:elevation="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/view_dianbo_image"
                android:layout_width="118dp"
                android:layout_height="118dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/view_dianbo_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/default_text"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/view_dianbo_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="8dp"
                    android:text="@string/default_text"
                    android:textColor="@android:color/black"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>